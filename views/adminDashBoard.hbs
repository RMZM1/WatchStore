                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-9 order-lg-last order-1 tab-content">
                        <div class="tab-pane fade show active" id="admins" role="tabpanel">
                            <div class="order-content">
                                <h3 class="account-sub-title d-none d-md-block"><i
                                        class="sicon-social-dropbox align-middle mr-3"></i>Admins</h3>
                                <div style="margin-bottom: 20px; text-align:end;">
                                    <button onclick="showAddAdminForm()" class="button-34" role="button">Add
                                        Admin</button>
                                </div>

                                <div class="order-table-container text-center">
                                    <table class="table table-order text-left">
                                        <thead>
                                            <tr>
                                                <th class="admin-id">Admin ID</th>
                                                <th class="admin-name">Name</th>
                                                <th class="admin-email">Email</th>
                                                <th class="admin-action">ACTIONS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#if resp.admins}}
                                            {{#each resp.admins}}
                                            <tr>
                                                <th class="admin-id">{{this._id}}</th>
                                                <th class="admin-name">{{this.fullName}}</th>
                                                <th class="admin-email">{{this.email}}</th>
                                                <th class="order-action">
                                                    <button onclick="removeAdmin('{{this._id}}')" class="button-33"
                                                        role="button">Remove</button>
                                                </th>
                                            </tr>
                                            {{/each}}
                                            {{else}}
                                            <tr>
                                                <td class="text-center p-0" colspan="5">
                                                    <p class="mb-5 mt-5">
                                                        No Admins To Show
                                                    </p>
                                                </td>
                                            </tr>
                                            {{/if}}
                                        </tbody>
                                    </table>
                                    <hr class="mt-0 mb-3 pb-2" />
                                </div>
                            </div>
                        </div><!-- End .tab-pane -->

                        <div class="tab-pane fade" id="product" role="tabpanel">
                            <div class="order-content">
                                <h3 class="account-sub-title d-none d-md-block"><i
                                        class="sicon-social-dropbox align-middle mr-3"></i>Products</h3>
                                <div style="margin-bottom: 20px; text-align:end;">
                                    <button onclick="showAddProductForm()" class="button-34" role="button">Add
