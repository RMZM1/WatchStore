                        <ul class="nav nav-tabs list flex-column mb-0" role="tablist">
                            <li class="nav-item">
                                <div>{{resp.admin.fullName}}</div>
                                <div>{{resp.admin.email}}</div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" id="admins-tab" data-toggle="tab" href="#admins" role="tab"
                                    aria-controls="admins" aria-selected="false">Admins</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="product-tab" data-toggle="tab" href="#product" role="tab"
