                                            <tr>
                                                <th class="product-pic">Image</th>
                                                <th class="product-title">Title</th>
                                                <th class="product-ccategory">Category</th>
                                                <th class="product-stock">Stock</th>
                                                <th class="product-pprice">Price</th>
                                                <th class="product-action">ACTIONS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#if resp.products}}
